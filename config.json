{
	"dir": {
		"dest": "build",
		"src": "src"
	},

	"task": {
		"imagemin": {
			"optimizationLevel": 5
		}
	},

	"copy": [
		"src/*.php",
		"src/*.html",
		"src/*.md",
		"src/*.json",
		"sec/*.txt",
		"src/.*"
	],

    "node_modules": {
        "copy": [{
            "from": "node_modules/twitter-bootstrap-3.0.0/js/**/*.js",
            "to": "build/js/lib/twitter-bootstrap/"
        }, {
            "from": "node_modules/jquery/dist/jquery.min.js",
            "to": "build/js/lib/jquery/"
        }]
    },

    "header": {
        "message": "/* Your awesome header! */\n"
    },

    "uglify_css": true,
    "uglify_js": true
}